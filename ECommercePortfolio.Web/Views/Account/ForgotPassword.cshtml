@model ECommercePortfolio.Web.Models.ForgotPasswordViewModel
@{
    ViewData["Title"] = "Forgot Password";
    Layout = "_Layout";
}

<div class="login-container">
    <div class="row justify-content-center w-100">
        <div class="col-md-8 col-lg-5">
            <div class="login-form">
                <div class="text-center mb-5">
                    <h1 class="login-title">Forgot Password</h1>
                    <p class="text-muted">Enter your email to reset your password</p>
                </div>

                <form method="post" asp-controller="Account" asp-action="ForgotPassword">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-4 alert alert-danger rounded-3"></div>

                    <div class="form-group mb-5">
                        <label asp-for="Email" class="form-label">Email address</label>
                        <div class="input-group">
                            <span class="input-group-text bg-transparent border-end-0 t-15">
                                <i class="fas fa-envelope text-primary"></i>
                            </span>
                            <input asp-for="Email" class="form-control border-start-0"
                                   placeholder="name@example.com" autocomplete="username" aria-required="true" />
                        </div>
                        <span asp-validation-for="Email" class="text-danger small"></span>
                    </div>

                    <div class="input-group">
                        <button type="submit" class="btn btn-primarys w-100 btn-lg mb-5">
                            <i class="fas fa-paper-plane me-2"></i>Send Reset Link
                        </button>
                    </div>

                    <div class="text-center">
                        <p class="mb-0">Remember your password?
                            <a asp-controller="Account" asp-action="Login" class="register-link">Back to Login</a>
                        </p>
                    </div>
                </form>
            </div>

            <div class="text-center mt-5">
                <a asp-controller="Home" asp-action="Index" class="back-home">
                    <i class="fas fa-arrow-left me-2"></i>Return to Home
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        // Add animation to form elements when page loads
        document.addEventListener('DOMContentLoaded', function() {
            // Animate login form entrance
            const loginForm = document.querySelector('.login-form');
            loginForm.classList.add('animate-in');
        });
    </script>
}

<style>
    .login-container {
        padding: 1rem 1.5rem;
        display: flex;
    }

    .login-form {
        transition: all 0.3s ease;
        opacity: 0;
        transform: translateY(20px);
        padding: 1rem 0;
    }

    .login-form.animate-in {
        opacity: 1;
        transform: translateY(0);
    }

    .login-title {
        font-weight: 700;
        color: var(--primary-dark);
        margin-bottom: 0px;
        font-size: 2.5rem;
    }

    .form-control {
        border-color: #e0e0e0;
        padding: 1rem 3rem;
        height: auto;
        font-size: 1.1rem;
        width: 100%;
    }

    .form-control:focus {
        box-shadow: none;
        border-color: var(--primary-color);
    }

    .input-group-text {
        position: absolute;
        border-color: #e0e0e0;
        top: 12px;
        left: 16px;
        font-size: 1.1rem;
    }

    .btn-primarys {
        background: linear-gradient(to right, var(--primary-color), var(--primary-dark));
        font-weight: 600;
        padding: 0.5rem 1.25rem;
        transition: all 0.3s ease;
        font-size: 1.2rem;
        border-color: #1a73e8;
        color: white;
    }

    .btn-primarys:hover {
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(26, 115, 232, 0.4);
    }

    .register-link {
        color: var(--primary-color);
        font-weight: 600;
        transition: color 0.2s ease;
        font-size: 1.1rem;
    }

    .register-link:hover {
        color: var(--primary-dark);
        text-decoration: underline;
    }

    .back-home {
        color: var(--secondary-color);
        font-size: 1.05rem;
        transition: all 0.2s ease;
    }

    .back-home:hover {
        color: var(--primary-color);
    }

    .form-label {
        font-weight: 500;
        font-size: 1.1rem;
        margin-bottom: 0.8rem;
    }

    .text-muted {
        color: var(--secondary-color);
        margin: 0px;
    }

    .t-15 {
        top: 15px;
    }

    /* Responsive adjustments */
    @@media (max-width: 767.98px) {
        .login-container {
            padding: 2rem 1rem;
        }

        .login-title {
            font-size: 2rem;
        }
    }
</style>