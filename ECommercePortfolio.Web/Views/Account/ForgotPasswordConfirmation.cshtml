@{
    ViewData["Title"] = "Forgot Password Confirmation";
    Layout = "_Layout";
}

<div class="login-container">
    <div class="row justify-content-center w-100">
        <div class="col-md-8 col-lg-5">
            <div class="login-form">
                <div class="text-center mb-5">
                    <h1 class="login-title">Check Your Email</h1>
                    <p class="text-muted">We've sent instructions to reset your password</p>
                </div>

                <div class="text-center max-w-400">
                    <div class="confirmation-icon mb-5">
                        <i class="fas fa-envelope-open-text fa-5x text-primary"></i>
                    </div>

                    <p class="mb-5 fs-5">
                        Please check your email for a link to reset your password.
                        If you don't receive it within a few minutes, check your spam folder.
                    </p>

                    <div class="input-group">
                        <a asp-controller="Account" asp-action="Login" class="btn btn-primarys w-100 btn-lg mb-5">
                            <i class="fas fa-sign-in-alt me-2"></i>Return to Login
                        </a>
                    </div>
                </div>
            </div>

            <div class="text-center mt-5">
                <a asp-controller="Home" asp-action="Index" class="back-home">
                    <i class="fas fa-arrow-left me-2"></i>Return to Home
                </a>
            </div>
        </div>
    </div>
</div>

<script>
    // Add animation to elements when page loads
    document.addEventListener('DOMContentLoaded', function() {
        // Animate login form entrance
        const loginForm = document.querySelector('.login-form');
        loginForm.classList.add('animate-in');

        // Add animation to the envelope icon
        const icon = document.querySelector('.confirmation-icon');
        setTimeout(() => {
            icon.classList.add('animate-bounce');
        }, 500);
    });
</script>

<style>
    .login-container {
        padding: 1rem 1.5rem;
        display: flex;
    }

    .login-form {
        transition: all 0.3s ease;
        opacity: 0;
        transform: translateY(20px);
        padding: 1rem 0;
    }

    .login-form.animate-in {
        opacity: 1;
        transform: translateY(0);
    }

    .login-title {
        font-weight: 700;
        color: var(--primary-dark);
        margin-bottom: 0px;
        font-size: 2.5rem;
    }

    .confirmation-icon {
        transition: all 0.3s ease;
    }

    .confirmation-icon.animate-bounce {
        animation: bounce 1s ease;
    }

    @@keyframes bounce {
        0%, 20%, 50%, 80%, 100% {transform: translateY(0);}
        40% {transform: translateY(-30px);}
        60% {transform: translateY(-15px);}
    }

    .btn-primarys {
        background: linear-gradient(to right, var(--primary-color), var(--primary-dark));
        font-weight: 600;
        padding: 0.5rem 1.25rem;
        transition: all 0.3s ease;
        font-size: 1.2rem;
        border-color: #1a73e8;
        color: white;
    }

    .btn-primarys:hover {
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(26, 115, 232, 0.4);
    }

    .back-home {
        color: var(--secondary-color);
        font-size: 1.05rem;
        transition: all 0.2s ease;
    }

    .back-home:hover {
        color: var(--primary-color);
    }

    .text-muted {
        color: var(--secondary-color);
        margin: 0px;
    }

    /* Responsive adjustments */
    @@media (max-width: 767.98px) {
        .login-container {
            padding: 2rem 1rem;
        }

        .login-title {
            font-size: 2rem;
        }
    }
</style>